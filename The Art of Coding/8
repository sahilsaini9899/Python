print("Welcome to the Grocery List App")
import datetime
time=datetime.datetime.now()
month=str(time.month)
day=str(time.day)
hour=str(time.hour)
minute=str(time.minute)

print("Current date and time:"+day+"/"+month+"\t"+hour+":"+minute)
print("You curently Meat and CHeese in your list")
food=['Meat','Cheese']
food.append(input("Type of food to add to the Grocery list:\n").title())
food.append(input("Type of food to add to the Grocery list:\n").title())
food.append(input("Type of food to add to the Grocery list:\n").title())
print("Here is your Grocery list\n"+str(food))
print("Here is your Grocery List Sorted:\n",sorted(food))
print("Simulating Grocery Shopping...\n")
print("Current Grocery List: "+str(len(food))+"items")
print("\n",sorted(food))
a=(input('What food did you just buy:').title())
print("Removing "+a+"from the list...")
food.remove(a)
print("\nCurrent Grocery List: "+str(len(food))+"items")
print("\n",sorted(food))

a=(input('What food did you just buy:').title())
print("Removing "+a+"from the list...")
food.remove(a)
print("\nCurrent Grocery List: "+str(len(food))+"items")
print("\n",sorted(food))

a=(input('What food did you just buy:').title())
