print("Welcome to the Grade sorter app")
grade=[]
grade.append(int(input("what is your first grade(0-100):\n")))
grade.append(int(input("what is your second grade(0-100):\n")))
grade.append(int(input("what is your third grade(0-100):\n")))
grade.append(int(input("what is your fourth grade(0-100):\n")))
print("Your grades are: ",grade,"\n")
print("your grades from highest to lowest are: ",grade.sort(reverse=True))
print("\nThe lowest two grades will now be dropped\n")
remo=grade.pop
remo2=grade.pop
print("Removed grade: ",remo)
print("\nRemoved grade: ",remo2)
print("\nYour remaining grades are: ",grade)
print("Nice work! Your highest grade is a ",grade[0])
