print("Welcome to the Favorite Teacher program")
teacher=[]
teacher.append(input('Who is your first favorite Techer:').title())
teacher.append(input('Who is your second favorite Techer:').title())
teacher.append(input('Who is your third favorite Techer:').title())
teacher.append(input('Who is your fourth favorite Techer:').title())
print("Your facorite teachers ranked are: ",teacher)
print("Your favorite teachers alphabetically are: ",sorted(teacher))
print("Your favorite teachers in reverse alphabetically order are: ",sorted(teacher,reverse=True))
print("Your top two favorite teachers are:  "+teacher[0]+" and "+teacher[1])
print("Your next two favorite teachers are: "+teacher[2]+" and "+teacher[3])
print("Your last favorite teacher is: "+teacher[3])
print("You have a total of 4 favorite teachers")
print("Oops, "+teacher[0]+" is no longer your first favorite teacher.")
teacher.insert(0,input("Who is your new favorite teacher:").title())
print("Your favorite teachers ranked are: ",teacher)
print("Your favorite teachers alphabetically are: ",sorted(teacher))
print("Your favorite teachers in reverse alphabetically order are: ",sorted(teacher,reverse=True))
print("Your top two favorite teachers are:  "+teacher[0]+" and "+teacher[1])
print("Your next two favorite teachers are: "+teacher[2]+" and "+teacher[3])
print("Your last favorite teacher is: "+teacher[3])
print("You have a total of 5 favorite teachers")
a=input("You have decided you no longer like a teacher.What teacher would you like to remove from your list").title()
teacher.remove(a)
print("Your favorite teachers ranked are: ",teacher)
print("Your favorite teachers alphabetically are: ",sorted(teacher))
print("Your favorite teachers in reverse alphabetically order are: ",sorted(teacher,reverse=True))
print("Your top two favorite teachers are:  "+teacher[0]+" and "+teacher[1])
print("Your next two favorite teachers are: "+teacher[2]+" and "+teacher[3])
print("Your last favorite teacher is: "+teacher[3])
print("You have a total of 4 favorite teachers")
